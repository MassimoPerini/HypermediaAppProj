<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>

      <%- include('../common/imports') %>

    <style>
      header{
        background-image: url('/public/imgs/bg/private.jpg');
      }
    </style>

  </head>
  <body>
  <%- include('../common/navbar', { page : '/private', user:user}) %>
  <header>
  </header>
    <section class="two-sided" id="content">
      <center>    <h1>Hi, <%=user.username%></h1>
      </center>
      <article>
        <h2>Welcome</h2>
        <h3>Your data:</h3>

        <h5>Username: <%=user.username%></h5>
        <h5>Name: <%=user.name%></h5>
        <h5>Mail: <%=user.mail%></h5>
        <h5>Surname: <%=user.surname%></h5>
        <h5>CF: <%=user.cf%></h5>
      </article>
      <aside>
        <div class="card">
          <a href="/reservation">
            <div class="card-header">
              <center>
                <img src="/public/imgs/reserve.svg" alt="Reserve visit">
              </center>
            </div>
            <div class="card-text">
              <h5>Reserve your visit</h5>
            </div>
          </a>
        </div>
        <div class="card">
          <a href="/logout">
            <div class="card-header">
              <center>
                <img src="/public/imgs/logout.svg" alt="Logout">
              </center>
            </div>
            <div class="card-text">
              <h5>Logout</h5>
            </div>
          </a>
        </div>
      </aside>
    </section>
  <%- include('../common/footer') %>

  </body>
</html>