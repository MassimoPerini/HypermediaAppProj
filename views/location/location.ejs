<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
      <%- include('../common/imports') %>
    <style>
      header{
        background-image: url("<%= location.header %>");
      }

      th, td {
        padding: 15px;
      }
    </style>
  </head>
  <body>
    <%- include('../common/navbar', { page : '/location'}) %>

    <header class="location">
      <div>
        <h1><%= title %></h1>
      </div>
    </header>

    <div class="main-content">
      <section>
        <section>
          <article>
            <h1>Position</h1>
              <iframe src="<%= location.gMaps %>" width="600" height="350" frameborder="0" style="border:0" allowfullscreen></iframe>
            <p>
              <%= location.description %>
            </p>
          </article>
          <article>
            <h1>Timetable</h1>
            <p>
              <table class="table">
                <thead>
                  <tr>
                    <th>Monday</th>
                    <th>Tuesday</th>
                    <th>Wednesday</th>
                    <th>Thursday</th>
                    <th>Friday</th>
                    <th>Saturday</th>
                    <th>Sunday</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <% var i; for(var i=0; i<7; i++) { %>
                      <td> <%= (timetables[i] == null ? "closed" : (timetables[i].opening_time + " - " + timetables[i].closing_time)) %></td>
                    <% } %>                  
                  </tr>
                </tbody>
              </table>
            </p>
          </article>
          <article>
            <h1>Contacts</h1>
            <ul>
              <li><%= location.tell %></li>
              <li><a href="mailto:<%= location.email %>"><%= location.email %></a></li>
            </ul>
          </article>
        </section>

        <aside>
          <section>
            <a class="button" href="/location/<%= location.id %>/gallery">Gallery</a>
            <a class="button" href="/location/<%= location.id %>/how-to-arrive">How to Arrive</a>
            <a class="button" href="/location/<%= location.id %>/available-services">Available Services</a>
          </section>
        </aside>
        </section>
    </div>
    <%- include('../common/footer') %>    
  </body>
</html>